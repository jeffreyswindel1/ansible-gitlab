---
extends: default

rules:
  braces:
    max-spaces-inside: 1
  comments-indentation: false
  comments:
    min-spaces-from-content: 1
  document-start: disable
  indentation:
    spaces: 2
    indent-sequences: false
  line-length:
    max: 500
    level: error
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true
